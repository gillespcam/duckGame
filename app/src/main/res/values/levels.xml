<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- LEVEL ROSTER -->

    <!-- Your level will not appear on the level select screen if it does not have a name in the
         "level_names" array, and a reference in the "levels" array. -->

    <string-array name="level_names">
        <item>"Level 0"</item>
    </string-array>
    <array name="levels">
        <item>@array/level_0</item>
    </array>

    <!-- LEVEL DATA -->

    <!-- A level can be formed manually by following the structure set out below.
         Each array of level data consists of two arrays, one containing the size of the level,
         and another containing the level's object data.

         The level's object data contains another 6 arrays, each containing a part of all the data
         that is used to construct a GameObject. A single GameObject is made up of all
         the array items that share the same index.

         e.g. "level_0_objects" includes a Player type with sprite @drawable/player, at position
         point (2,4), rotated 0 rad, with a scale of 1. The values from the 0 index of each array
         supply all the information needed to create this GameObject. We call this GameObject. 0 -->

    <!-- LEVEL 0 -->

    <array name="level_0_size">
        <item>16</item>
        <item>8</item>
    </array>
    <string-array name="level_0_types">
        <item>Player</item>
        <item>Goal</item>
    </string-array>
    <array name="level_0_sprites">
        <item>@drawable/player</item>
        <item>@drawable/goal</item>
    </array>
    <array name="level_0_x_positions">
        <item>2</item>
        <item>13</item>
    </array>
    <array name="level_0_y_positions">
        <item>4</item>
        <item>4</item>
    </array>
    <array name="level_0_rotations">
        <item>0</item>
        <item>-90</item>
    </array>
    <array name="level_0_scales">
        <item>1</item>
        <item>1</item>
    </array>
    <array name="level_0_objects">
        <item>@array/level_0_types</item>
        <item>@array/level_0_sprites</item>
        <item>@array/level_0_x_positions</item>
        <item>@array/level_0_y_positions</item>
        <item>@array/level_0_rotations</item>
        <item>@array/level_0_scales</item>
    </array>
    <array name="level_0">
        <item>@array/level_0_size</item>
        <item>@array/level_0_objects</item>
    </array>

</resources>